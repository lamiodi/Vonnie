{
  "name": "vonne-x2x-backend",
  "version": "1.0.0",
  "description": "Backend for Vonne X2X Management System",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production PORT=5010 node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "test:attendance": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/attendance.test.js",
    "test:barcode": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/barcode.test.js",
    "generate-test-data": "node scripts/generate-test-data.js",
    "insert-products": "node scripts/insert-products.js",
    "db:cleanup": "node scripts/run-sql-file.js ../sql/complete_database_cleanup.sql",
    "db:verify-cleanup": "node scripts/run-sql-file.js ../sql/verify_cleanup.sql"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.7.1",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3"
  },
  "author": "Vonne X2X Team",
  "license": "ISC"
}
